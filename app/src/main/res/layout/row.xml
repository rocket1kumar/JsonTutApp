<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    android:background="@color/windowsBackground"
    android:elevation="14dp"
    android:fadingEdge="vertical"
    android:divider="#ff3d00"

    tools:context="com.example.android.jsontutapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
         >
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:elevation="8dp"
            android:layout_margin="8dp">
            <ImageView
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:id="@+id/imgIcon"

                />
            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:id="@+id/progress"/>
        </FrameLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="fill_horizontal"
            android:background="@color/windowsBackground"
            android:paddingTop="5dp"
           >

            <TextView
                android:id="@+id/countryname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="countryName"
                android:textAlignment="center"
                android:textColor="@color/primaryTextColor"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/countrycapital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/primaryTextColor"
                android:textAlignment="center"
                android:hint="countryCapital"

                android:textSize="20dp" />

            <TextView
                android:id="@+id/region"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/primaryTextColor"
                android:textAlignment="center"
                android:hint="Region"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"


        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:paddingLeft="4dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/nativename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="nativename"
                android:textColor="@color/primaryTextColor"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/demomyn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="People known as"
                android:textColor="@color/primaryTextColor"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/subregion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="subregion"
                android:textColor="@color/primaryTextColor"
                android:textSize="18dp" />

       <!--     <TextView
                android:id="@+id/alphacode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="alpha2code"
                android:textColor="@color/text_color"
                android:textSize="18dp" />
                -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"

            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:paddingLeft="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="area"
                android:textColor="@color/primaryTextColor"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/ppln"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="population"
                android:textColor="@color/primaryTextColor"
                android:textSize="18dp" />

           <TextView
                android:id="@+id/alpha3code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="alpha3code"
               android:textColor="@color/primaryTextColor"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/callingcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="callingcode"
                android:textColor="@color/primaryTextColor"
                android:textSize="18dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        android:paddingLeft="4dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/langspoke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="languages sopken"
            android:textColor="@color/primaryTextColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/timezones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="timezone"
            android:textColor="@color/primaryTextColor"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/currencies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="currencies"
            android:textColor="@color/primaryTextColor"

            android:textSize="18dp" />

        <TextView
            android:id="@+id/shareborder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="share border"
            android:textColor="@color/primaryTextColor"
            android:textSize="18dp" />
    </LinearLayout>

</LinearLayout>















